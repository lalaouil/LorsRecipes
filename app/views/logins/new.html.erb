<%= render 'shared/page_title', title: 'Log in' %>

<div class= "row">
  <div class= 'well col-sm-4 col-sm-offset-4'>
    <%= form_tag '/login' do %>
    
      <%= label_tag :email %>
      <%= text_field_tag :email %>
      
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      
      <%= submit_tag 'Log in', class: 'btn-submit btn-success' %>
      
    <% end %>
    
    <p>New user? <%= link_to "Sign up now!", register_path %></p>    
  </div>
</div>